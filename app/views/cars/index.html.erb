<div class="container">
  <div class="row">
    <h1>Awesome cars around you</h1>
    <div class="col-xs-12 col-md-6">
      <% @cars.each do | car | %>
        <%= link_to(car_path(car)) do %>
          <div class="col-sm-6 col-md-6 xs-padded">
            <div class="thumbnail">
              <%# if car.photos.present? %>
                <%#= image_tag(accomodation.photos.sample.picture.url(:medium), height: '180', width: '250') %>
              <%# else %>
                <%#= image_tag ("default.jpg"), height: '180', width: '250' %>
              <%# end %>
              <div class="caption">
                <p><%= car.picture.url(:thumb) %></p>
                  <p><%= "#{car.city}" %></p>
                  <p><span class="label label-info price-label"><%= car.rate %> â‚¬</span></p>
                  <p>
                   Ratings:
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star-o"></i>
                  (19)
                </p>
                <p class="text-center">
                  <%= link_to("Show car details", car_path(car), class: "btn btn-default btn-sm", role: "button") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6 xs-padded">
      <!-- placeholder for the map -->
      <div id="map" class="thumbnail" style="width: 100%; height: 900px;"></div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
 <%= javascript_tag do %>
   $(document).on('ready', function() {
     handler = Gmaps.build('Google');
     handler.buildMap({ internal: { id: 'map' } }, function(){
       markers = handler.addMarkers(<%= raw @markers.to_json %>);
       handler.bounds.extendWith(markers);
       handler.fitMapToBounds();
     });
   })
 <% end %>
<% end %>

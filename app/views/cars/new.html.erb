<h1>Cars#new</h1>

<%= simple_form_for @car do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :city %>
    <%= f.association :category %>
    <%= f.input :year %>
    <%= f.input :mileage %>
    <%= f.input :fuel, as: :select, collection: ['petrol', 'diesel', 'hybrid', 'electric'] %>
    <%= f.input :seats %>
    <%= f.input :rate %>
    <%= f.input :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
